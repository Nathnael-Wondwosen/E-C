# AWS Environment Variables Template
# Copy this file to .env.aws and update with your actual values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-aws-account-id

# Database Configuration
MONGODB_URI=mongodb://admin:password@mongodb:27017/
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password

# API Gateway Configuration
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=localhost

# User Service Configuration
USER_SERVICE_PORT=3001
USER_SERVICE_HOST=localhost
USER_JWT_SECRET=your-jwt-secret-key

# Product Service Configuration
PRODUCT_SERVICE_PORT=3002
PRODUCT_SERVICE_HOST=localhost

# Order Service Configuration
ORDER_SERVICE_PORT=3003
ORDER_SERVICE_HOST=localhost

# Payment Service Configuration
PAYMENT_SERVICE_PORT=3004
PAYMENT_SERVICE_HOST=localhost

# Search Service Configuration
SEARCH_SERVICE_PORT=3005
SEARCH_SERVICE_HOST=localhost

# Notification Service Configuration
NOTIFICATION_SERVICE_PORT=3006
NOTIFICATION_SERVICE_HOST=localhost

# Frontend Configuration
ADMIN_DASHBOARD_PORT=3007
CUSTOMER_PORTAL_PORT=3008

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key
SESSION_SECRET=your-session-secret

# Email Configuration (if using email notifications)
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USER=your-email@domain.com
EMAIL_PASS=your-email-password

# Payment Gateway Configuration (if using Stripe, PayPal, etc.)
STRIPE_SECRET_KEY=your-stripe-secret-key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret

# Logging Configuration
LOG_LEVEL=info